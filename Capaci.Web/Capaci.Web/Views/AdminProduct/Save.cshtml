@model Capaci.DTO.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


    <section class="section">
      <div class="row">
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add New Product!</h5>

              <!-- General Form Elements -->
              <form asp-action="Save" method="post">
                    @Html.AntiForgeryToken()
                    <div>
                      <div class="row mb-3">
                      <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                      <div class="col-sm-10">
                        <input asp-for="Name" type="text" class="form-control">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputEmail" class="col-sm-2 col-form-label">Price</label>
                      <div class="col-sm-10">
                        <input asp-for="Price" type="text" class="form-control">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
                      <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                      </div>
                    </div>
               

                    <div class="row mb-3">
                        <button type="submit" class="btn btn-primary">Save!</button>
                      </div>
                    </div>
              </form>
             
              </div>
           </div>
           </div>
       </section>
       